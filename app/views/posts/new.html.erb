<h1>Create New Post</h1>
<% if @post.errors.any?%>
    <h2>The following are the errors</h2>
    <ul>
        <% @post.errors.full_messages.each do |i|%>
            <li><%= i%></li>
        <%end%>  
    </ul>
<%end%>
<%= form_with(model: @post,local:true) do |i|%>
    <p>
        <%= i.label :Heading%><br>
        <%= i.text_field :heading%>
    </p>
    <p>
        <%= i.label :Description%><br>
        <%= i.text_area :description%>
    </p>
    <p>
        <%= i.submit 'Create'%>
    </p>

<%end%>