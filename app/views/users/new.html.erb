<h1>SignIN form</h1>
<% if @user.errors.any?%>
    <h2>The following are the errors</h2>
    <ul>
        <% @user.errors.full_messages.each do |i|%>
            <li><%= i%></li>
        <%end%>  
    </ul>
<%end%>
<%= form_with(model: @user,local:true) do |i|%>
    <p>
        <%= i.label :Username%><br>
        <%= i.text_field :username%>
    </p>
    <p>
        <%= i.label :Email%><br>
        <%= i.text_field :email%>
    </p>
    <p>
        <%= i.label :Phone%><br>
        <%= i.number_field :phone%>
    </p>
    <p>
        <%= i.label :Password%><br>
        <%= i.password_field :password%>
    </p>
    <p>
        <%= i.submit 'signin'%>
    </p>

<%end%>